                            </div>
                        </div>
                    </div>
                    <!--Hero Item end-->

                    <!--Hero Item start-->
                    <div class="hero-item bg-image" data-bg="/assets/images/hero/hero-3.jpg">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <!--Hero Content start-->
                                    <div class="hero-content-2 center">

                                        <h2>Venda & Transporte de contentores</h2>
                                        <a href="/shop" class="btn">COMPRAR AGORA</a>

                                    </div>
                                    <!--Hero Content end-->

                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Hero Item end-->

                </div>
            </div>
            <!--slider section end-->

            <!-- Banner section start -->

            <div class="banner-section section pt-30">
                <div class="container">
                    <div class="row">
                        <% products.forEach(group=> {
                            if(group.name === "Premium"){
                            group.sections[0].products.forEach((product, key) => {
                            if(key === 2){return} %>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <!-- Single Banner Start -->
                                <div class="single-banner-item mb-30">
                                    <div class="banner-image">
                                        <a href="">
                                            <img src="<%=product.imageMain%>" alt="">
                                        </a>
                                    </div>
                                    <div class="banner-content">
                                        <h3 class="title">
                                            <%=product.label%>
                                        </h3>
                                        <a href="/product?id=<%=product.id%>">COMPRAR AGORA</a>
                                    </div>
                                </div>
                                <!-- Single Banner End -->
                            </div>
                            <% })}}) %>

                    </div>
                </div>
            </div>
            <!-- Banner section End -->

            <!-- Product section start -->
            <% products.forEach(group=> {
                if(group.name === "Premium"){return}%>
                <div
                    class="product-section section pt-70 pt-lg-50 pt-md-40 pt-sm-30 pt-xs-20 pb-55 pb-lg-35 pb-md-25 pb-sm-15 pb-xs-5">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="section-title text-center mb-15">
                                    <h2>
                                        <%=group.name%>
                                    </h2>
                                </div>
                                <div class="product-tab mb-50 mb-sm-30 mb-xs-20">
                                    <div class="scrolling-tabs">
                                        <ul class="nav nav-pills" id="pills-tab" role="tablist">
                                            <% group.sections.forEach((section, key)=> { %>
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link <%= key === 0 ? 'active' : '' %> d-sm-flex"
                                                        id="pills-<%= section.id %>-tab" data-mdb-toggle="pill"
                                                        href="#pills-<%= section.id %>" role="tab"
                                                        aria-controls="pills-<%= section.id %>" aria-selected="true">
                                                        <%= section.displayName %>
                                                    </a>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="tab-content">
                            <% group.sections.forEach((section, key)=> { %>
                                <div class="tab-pane fade <%= key === 0 ? 'show active' : '' %>"
                                    id="pills-<%= section.id %>" role="tabpanel"
                                    aria-labelledby="pills-<%= section.id %>-tab">
                                    <div class="row">
                                        <% section.products.forEach((product, key)=> { %>
                                            <div class="col-lg-3 col-md-3 col-sm-6">
                                                <div class="single-grid-product mb-40">
                                                    <div class="product-image">
                                                        <a href="/product?id=<%=product.id%>">
                                                            <img src="<%=product.imageMain%>" class="img-fluid" alt="">
                                                        </a>
                                                        <div class="product-action">
                                                            <ul>
                                                                <!-- Add data attributes to the Add to Cart button -->
                                                                <li><a class="add-to-cart-btn"
                                                                        data-image="<%= product.imageMain %>"
                                                                        data-id="<%= product.id %>"
                                                                        data-name="<%= product.label %>"
                                                                        data-price="<%= product.price %>">
                                                                        <i class="fa fa-cart-plus"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="product-content">
                                                        <h3 class="title"><a href="#"></a></h3>
                                                        <p class="product-price">
                                                            <span class="discounted-price"></span>
                                                            <%= product.price %> &euro;
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                    </div>
                </div>
                <% }) %>
