                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Hero Item end-->

                    <!--Hero Item start-->
                    <div class="hero-item bg-image" data-bg="/assets/images/hero/hero-2.jpg">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <!--Hero Content start-->
                                    <div class="hero-content-2 center">

                                        <h2>Venda & Transporte de contentores</h2>
                                        <a href="/shop" class="btn">COMPRAR AGORA</a>

                                    </div>
                                    <!--Hero Content end-->

