    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const pillsTabs = document.querySelectorAll('[data-mdb-toggle="pill"]');
            pillsTabs.forEach(tab => {
                tab.addEventListener('shown.bs.tab', function (event) {
                    const activeTab = event.target;
                    const otherTabs = Array.from(pillsTabs).filter(tab => tab !== activeTab);
                    otherTabs.forEach(tab => {
                        tab.style.backgroundColor = ''; // Reset background color for inactive tabs
                        tab.style.color = ''; // Reset text color for inactive tabs
                    });
                });
            });
        });
    </script>
