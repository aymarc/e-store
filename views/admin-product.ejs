                reqMethod = "DELETE";
                jsonObj = JSON.stringify({ "id": dataIdentity });
                isJson = true;
            }

            Swal.fire({
                icon: 'warning',
                title: warningMsg,
                showCancelButton: true,
                confirmButtonText: 'Oui je suis sur',
                cancelButtonText: "Annuler"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: reqMethod,
